# Example environment configuration for the RAG Bot
# Copy this file to .env and modify values as needed

# Vector Store Settings
CHROMA_PERSIST_DIR=./chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM Settings
DEFAULT_OLLAMA_MODEL=llama3:latest
OLLAMA_BASE_URL=http://localhost:11434

# Processing Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_RETRIEVAL_CHUNKS=5

# Memory Settings
MAX_CONVERSATION_HISTORY=10
MEMORY_BUFFER_SIZE=2000

# Interface Settings
GRADIO_PORT=7860
GRADIO_SHARE=false

# File Upload Settings
MAX_FILE_SIZE_MB=50

# Logging
LOG_LEVEL=INFO

# Performance Monitoring Settings
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_FILE=performance.log
MAX_PERFORMANCE_RECORDS=1000
MEMORY_MONITORING_ENABLED=true
DETAILED_PERFORMANCE_LOGGING=true

# Performance Optimization Settings
AUTO_OPTIMIZE_PERFORMANCE=true
MEMORY_THRESHOLD_MB=1000
RESPONSE_TIME_THRESHOLD_S=10.0
VECTOR_SEARCH_K_LIMIT=10
CONTEXT_LENGTH_LIMIT=4000